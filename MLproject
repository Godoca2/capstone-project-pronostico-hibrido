name: CAPSTONE_PROJECT

conda_env: conda.yaml

entry_points:
  train_ae_dmd:
    parameters:
      latent_dim: {type: int, default: 100}
      epochs: {type: int, default: 5}
      batch_size: {type: int, default: 32}
    command: >
      python src/train_ae_dmd.py
      --latent_dim {latent_dim}
      --epochs {epochs}
      --batch_size {batch_size}

# Con esto puedes ejecutar mlflow run . -e train_ae_dmd -P latent_dim=128 -P epochs=10 -P batch_size=64.